# Компилятор
CC := gcc

# Опции компиляции
CFLAGS := -std=c99 -Wall -Werror -pedantic

# Общие объектные файлы
OBJS := hello.o buy.o

greeting.exe : $(OBJS) main.o
	$(CC) $^ -o $@

test_greeting.exe : $(OBJS) test.o
	$(CC) $^ -o $@

hello.o : hello.c hello.h
	$(CC) $(CFLAGS) -c $<

buy.o : buy.c buy.h
	$(CC) $(CFLAGS) -c $<

main.o : main.c hello.h buy.h
	$(CC) $(CFLAGS) -c $<

test.o : test.c hello.h buy.h
	$(CC) $(CFLAGS) -c $<

clean :
	$(RM) *.o *.exe
 